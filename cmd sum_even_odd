#!/bin/bash
# ------------------------------------------------------
# Filename: sum_even_odd.sh
# Description: This shell script finds the sum of even and odd
#              numbers separately up to a given number N.
# ------------------------------------------------------

# 'read' command takes input from the user.
# '-p' allows displaying a prompt message on the same line.
read -p "Enter the value of N: " N

# Initialize variables to store sums of even and odd numbers.
# Both sums start from 0.
even_sum=0   # Holds sum of even numbers
odd_sum=0    # Holds sum of odd numbers

# 'for' loop iterates from 1 up to the number entered by the user (N).
for (( i=1; i<=N; i++ ))
do
    # 'if' condition checks whether the number is even.
    # The modulo (%) operator gives remainder when divided by 2.
    # If remainder is 0, the number is even.
    if (( i % 2 == 0 ))
    then
        # Add the even number to even_sum.
        even_sum=$((even_sum + i))
    else
        # Otherwise, the number is odd.
        # Add it to odd_sum.
        odd_sum=$((odd_sum + i))
    fi
done

# 'echo' command prints text or variables to the terminal.
echo "Sum of even numbers up to $N = $even_sum"
echo "Sum of odd numbers up to $N  = $odd_sum"
