#!/bin/bash
# head_file.sh - Display first 10 lines of a file (alternate version)

# Check if filename is given
if [ $# -lt 1 ]; then
    echo "Usage: $0 <filename>"
    exit 1
fi

file=$1

# Check if file exists
if [ ! -f "$file" ]; then
    echo "Error: File '$file' not found!"
    exit 1
fi

# Display first 10 lines using sed
echo "First 10 lines of $file:"
sed -n '1,10p' "$file"
