#!/bin/bash   # Shebang: tells system to run this script using Bash shell

echo "Enter a number:"  # Display message to user
read num                # Read input number from user

temp=$num               # Store original number in temp for processing
sum=0                   # Initialize sum to 0

# Loop to extract each digit and calculate cube sum
while [ $temp -gt 0 ]   # While temp is greater than 0
do
    digit=$((temp % 10))                  # Extract last digit using modulus
    sum=$((sum + digit * digit * digit))  # Add cube of digit to sum
    temp=$((temp / 10))                   # Remove last digit
done

# Check if the number is Armstrong
if [ $sum -eq $num ]    # Compare sum with original number
then
    echo "$num is an Armstrong number"  # If equal, it's Armstrong
else
    echo "$num is not an Armstrong number"  # Otherwise not Armstrong
fi
